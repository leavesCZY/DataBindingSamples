<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="github.leavesc.databinding.ImageBean" />

        <import type="github.leavesc.databinding.MainActivity9.Handler" />

        <variable
            name="image"
            type="ImageBean" />

        <variable
            name="handler"
            type="Handler" />
    </data>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity9">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher_background"
            bind:url="@{image.url}" />

        <Button
            android:id="@+id/button"
            style="@style/BtnStyle"
            android:onClick="@{()->handler.onClick(image)}"
            android:text='@{"改变图片Url"}' />

        <TextView
            android:id="@+id/textView"
            style="@style/BtnStyle"
            android:text='@{"xxx"}' />

        <TextView
            android:id="@+id/textView1"
            style="@style/BtnStyle"
            android:layout_marginTop="30dp"
            android:background='@{"红色"}'
            android:padding="20dp"
            android:text="红色背景蓝色字"
            android:textColor='@{"蓝色"}' />

        <TextView
            style="@style/BtnStyle"
            android:background='@{"蓝色"}'
            android:padding="20dp"
            android:text="蓝色背景红色字"
            android:textColor='@{"红色",default=@color/colorAccent}' />

    </LinearLayout>
</layout>